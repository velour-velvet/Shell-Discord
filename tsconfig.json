{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": [
      "es6",
      "ES2021"
    ],
    "sourceMap": true,
    "types": [
      // add node as an option
      "node",
      "chai",
      "mocha"
    ],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}